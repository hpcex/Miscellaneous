{
    "log": {
        "loglevel": "warning"
    },
    "routing": {
        "domainStrategy": "AsIs",
        "rules": [
            {
                "type": "field",
                "outboundTag": "direct",
                "ip": [
                        "127.0.0.1"
                ]
            },
            {
                "type": "field",
				"inboundTag": "socks_IN",
                "outboundTag": "wg"
            },
            {
                "type": "field",
                "ip": [
                    "geoip:private"
                ],
                "outboundTag": "block"
            }
        ]
    },
    "inbounds": [
	{
            "listen": "127.0.0.1",
            "port": 1081,
            "protocol": "socks",
            "settings": {
                "auth": "noauth",
             // "ip": "127.0.0.1",
                "udp": true
            },
            "sniffing": {
                "enabled": false
            },
            "tag": "socks_IN"
        },
     {
            "port": 1443,
            "protocol": "vless",
            "settings": {
                "clients": [
                    {
                        "id": "uuid",
                        "flow": "xtls-rprx-direct",
                        "level": 0,
                        "email": "xxoo@gmail.com"
                    }
                ],
                "decryption": "none",
                "fallbacks": [
                    {
                        "dest": 1310,
                        "xver": 1
                    },
                    {"path":"/api","dest":1234,"xver":1}
                ]
            },
            "streamSettings": {
                "network": "tcp",
                "security": "xtls",
                "xtlsSettings": {
                    "alpn": [
                        "http/1.1"
                    ],
                    "certificates": [
                        {
                            "certificateFile": "/etc/xray/cert.pem",
                            "keyFile": "/etc/xray/key.pem"
                        }
                    ]
                }
            }
        },
        {
            "port": 1310,
            "listen": "127.0.0.1",
            "protocol": "trojan",
            "settings": {
                "clients": [
                    {
                        "password": "fuckfirewall",
                        "level": 0,
                        "email": "xxoo@gmail.com"
                    }
                ],
                "fallbacks": [
                    {
                        "dest": 1234
                    }
                ]
            },
            "streamSettings": {
                "network": "tcp",
                "security": "none",
                "tcpSettings": {
                    "acceptProxyProtocol": true
                }
            }
        },
        {
            "listen": "127.0.0.1",
            "port": 1234,
            "protocol": "vmess",
            "settings": {
                "clients": [
                {
                    "alterId": 0,
                    "security": "auto",
                    "id": "uuid"
                }
                ]
            },
            "streamSettings": {
                "network": "ws",
                "security": "none",
                "wsSettings": {
                	"connectionReuse": true,
	  			 // "acceptProxyProtocol": true,
                	"maxEarlyData": 1024,
                	"earlyDataHeaderName": "Sec-WebSocket-Protocol",
                	"path": "/api"
                }
            }
        }
    ],
    "outbounds": [
        {
            "protocol": "freedom",
            "tag": "direct"
        },
        {
            "protocol": "blackhole",
            "tag": "block"
        },
     {
      "tag":"IP6_out",
      "protocol": "freedom",
      "settings": {
        "domainStrategy": "UseIPv6"  //指定使用 IPv6
      }
    },
    {
      "protocol": "freedom",
  "streamSettings": {
        "sockopt": {
          "mark": 32
        }
      },
      "settings": {
        "domainStrategy": "UseIPv6"
  },
      "tag": "wg"  //与routing中的tag保持一致
    }
    ]
}
